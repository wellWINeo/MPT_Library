<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Library.Views.RecoverView">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel>
            <TextBlock>Восстановление доступа</TextBlock>

            <TextBlock TextAlignment="Left">Электронный почтовый ящик</TextBlock>
            <TextBox x:Name="EmailBox"></TextBox>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="SendPassword">Отправить пароль</Button>
                <Button x:Name="Login">Войти</Button>
            </StackPanel>
        
        </StackPanel>
    </Grid>
</UserControl>
